<%- include("partials/header.ejs") %>
<div class="lgt-green-bg p-4 p-md-5 mb-4 rounded text-body-emphasis">
    <form action=<%= locals.blogPost ? '/update' : '/save' %> method="post">
        <input class="form-control dark-form my-4 form-text" type="text" required name="title" placeholder="Title" value="<%= locals.blogPost ? blogPost.title : '' %>">
        <textarea class="form-control dark-form form-text" name="content" cols="30" rows="18" placeholder="Content" style="resize: none;"><%= locals.blogPost ? blogPost.bodyText : "" %></textarea>
        <% if(locals.blogPost) { %>
             <input hidden type="text" name="id" value='<%= blogPost.id %>'>
        <% } %>
        <div class="text-end m-2">
            <input class="preview-button" type="submit" value= "<%= locals.blogPost ? 'Update Post' : 'Create Post' %>">
        </div>
    </form>
</div>
<%- include("partials/footer.ejs") %>